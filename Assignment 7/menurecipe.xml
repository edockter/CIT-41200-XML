<?xml-stylesheet type="text/css" href="menu.css" ?>
<?xml-stylesheet type="text/css" href="recipe.css" ?>

<mnu:menuItem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://example.com/chestershartland/menu menu.xsd"
 xmlns:mnu="http://example.com/chestershartland/menu">
   <mnu:itemName>Oatmeal Breakfast</mnu:itemName>
   <mnu:description>
   <![CDATA[Our oatmeal is served warm with fresh fruit, pecans, raisins,
      and 100% maple syrup. Available all day.
   ]]>
   </mnu:description>
   <mnu:price>6.95</mnu:price>
   <mnu:icon>&#9824;</mnu:icon>  
   <mnu:icon>&#9829;</mnu:icon>
   
   <rec:recipe xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://example.com/chestershartland/recipe recipe.xsd"       
      xmlns:rec="http://example.com/chestershartland/recipe">
      <rec:itemName>Oatmeal Breakfast</rec:itemName>
      <rec:ingredients>
         <rec:ingredient>1/3 c steel cut oats</rec:ingredient>
         <rec:ingredient>1-1/4 c water</rec:ingredient>
         <rec:ingredient>1/4 t salt</rec:ingredient>
      </rec:ingredients>
      <rec:directions>
         <![CDATA[Bring water to a boil. Add salt and oats, stir, and lower heat
      to lowest setting. Cover and let stand 2 hours.
   ]]>
      </rec:directions>
   </rec:recipe>
</mnu:menuItem>

